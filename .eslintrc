{
    "root": true,
    "extends": ["wesbos"],
    "rules": {
        "react/destructuring-assignment": "warn",
        "react/prop-types": "warn",
        "react/state-in-constructor": ["warn", "never"],
        "prettier/prettier": [
            "error",
            {
                "arrowParens": "always",
                "bracketSpacing": true,
                "endOfLine": "lf",
                "printWidth": 80,
                "semi": true,
                "singleQuote": true,
                "tabWidth": 4,
                "trailingComma": "es5",
                "useTabs": false
            }
        ],
        "react/jsx-props-no-spreading": "off"
    },
    "overrides": [
        {
            "files": ["__config/**"],
            "rules": { "import/no-extraneous-dependencies": "off" }
        }
    ]
}
